{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 32px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
  }

  .ai-featured-collection__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-featured-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-collection__product-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-collection__product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-featured-collection__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collection__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collection__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-collection__product-info-{{ ai_gen_id }} {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-grow: 1;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    text-decoration: none;
    display: block;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-featured-collection__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-featured-collection__price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
  }

  .ai-featured-collection__product-vendor-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.product_vendor_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-featured-collection__add-to-cart-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .ai-featured-collection__add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-featured-collection__add-to-cart-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .ai-featured-collection__empty-message-{{ ai_gen_id }} {
    font-size: 18px;
    color: #999;
  }

  @media screen and (max-width: 989px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }}
  class="ai-featured-collection-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.collection != blank %}
    {% if block.settings.show_heading %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% else %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">{{ block.settings.collection.title }}</h2>
        {% endif %}
        {% if block.settings.show_description and block.settings.collection.description != blank %}
          <div class="ai-featured-collection__description-{{ ai_gen_id }}">
            {{ block.settings.collection.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection.products.size > 0 %}
      <div class="ai-featured-collection__grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: 8 %}
          <div class="ai-featured-collection__product-card-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-featured-collection__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-featured-collection__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-featured-collection__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>

            <div class="ai-featured-collection__product-info-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <div class="ai-featured-collection__product-vendor-{{ ai_gen_id }}">
                  {{ product.vendor }}
                </div>
              {% endif %}

              <a
                href="{{ product.url }}"
                class="ai-featured-collection__product-title-{{ ai_gen_id }}"
              >
                {{ product.title }}
              </a>

              {% if block.settings.show_price %}
                <div class="ai-featured-collection__product-price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-featured-collection__price-sale-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    <span class="ai-featured-collection__price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_add_to_cart %}
                <button
                  class="ai-featured-collection__add-to-cart-{{ ai_gen_id }}"
                  data-product-id="{{ product.id }}"
                  data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                  {% unless product.available %}disabled{% endunless %}
                >
                  {% if product.available %}
                    {{ block.settings.add_to_cart_text }}
                  {% else %}
                    {{ block.settings.sold_out_text }}
                  {% endif %}
                </button>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p class="ai-featured-collection__empty-message-{{ ai_gen_id }}">
          This collection is empty. Add products to display them here.
        </p>
      </div>
    {% endif %}
  {% else %}
    <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
      {{ 'collection-1' | placeholder_svg_tag }}
      <p class="ai-featured-collection__empty-message-{{ ai_gen_id }}">
        Select a collection to display products
      </p>
    </div>
  {% endif %}
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.addToCartButtons = this.querySelectorAll('.ai-featured-collection__add-to-cart-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.addToCartButtons.forEach((button) => {
          button.addEventListener('click', this.handleAddToCart.bind(this));
        });
      }

      async handleAddToCart(event) {
        const button = event.target;
        const variantId = button.dataset.variantId;
        const originalText = button.textContent;

        button.disabled = true;
        button.textContent = 'Adding...';

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: 1,
            }),
          });

          if (response.ok) {
            button.textContent = 'Added!';
            
            const cartCountElements = document.querySelectorAll('[data-cart-count]');
            if (cartCountElements.length > 0) {
              const cartResponse = await fetch('/cart.js');
              const cart = await cartResponse.json();
              cartCountElements.forEach((element) => {
                element.textContent = cart.item_count;
              });
            }

            setTimeout(() => {
              button.textContent = originalText;
              button.disabled = false;
            }, 2000);
          } else {
            throw new Error('Failed to add to cart');
          }
        } catch (error) {
          button.textContent = 'Error';
          setTimeout(() => {
            button.textContent = originalText;
            button.disabled = false;
          }, 2000);
        }
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

