{{ 'header.css' | asset_url | stylesheet_tag: preload: true }}
<script src="{{ 'header.js' | asset_url }}" defer></script>

{%- liquid
  assign logo_size = section.settings.logo_size
  assign search_enabled = section.settings.enable_search
-%}

<header class="site-header" data-section-id="{{ section.id }}" data-section-type="header">
  <div class="header-container">
    <!-- Mobile Menu Toggle -->
    <button
      class="header__menu-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
      data-menu-toggle
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M3 12H21M3 6H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <!-- Logo -->
    <div class="header__logo">
      <a href="{{ routes.root_url }}" class="header__logo-link">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: logo_size }}"
            alt="{{ shop.name }}"
            width="{{ logo_size }}"
            height="auto"
            loading="eager"
            class="header__logo-image"
          >
        {% else %}
          <span class="header__logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__nav" data-menu>
      <ul class="header__nav-list">
        {% for link in section.settings.menu.links %}
          <li class="header__nav-item{% if link.links.size > 0 %} has-dropdown{% endif %}">
            <a
              href="{{ link.url }}"
              class="header__nav-link{% if link.active %} header__nav-link--active{% endif %}"
              {% if link.links.size > 0 %}
                aria-haspopup="true"
                aria-expanded="false"
                data-dropdown-trigger
              {% endif %}
            >
              {{ link.title }}
              {% if link.links.size > 0 %}
                <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                  <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% endif %}
            </a>

            {%- comment -%} Child Dropdown (Level 2) {%- endcomment -%}
            {% if link.links.size > 0 %}
              <ul class="dropdown dropdown--child" data-dropdown-menu>
                {% for child_link in link.links %}
                  <li class="dropdown__item{% if child_link.links.size > 0 %} has-dropdown{% endif %}">
                    <a
                      href="{{ child_link.url }}"
                      class="dropdown__link"
                      {% if child_link.links.size > 0 %}
                        aria-haspopup="true"
                        aria-expanded="false"
                        data-dropdown-trigger
                      {% endif %}
                    >
                      {{ child_link.title }}
                      {% if child_link.links.size > 0 %}
                        <svg
                          class="dropdown-icon dropdown-icon--right"
                          width="12"
                          height="12"
                          viewBox="0 0 12 12"
                          fill="none"
                        >
                          <path d="M4.5 3L7.5 6L4.5 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      {% endif %}
                    </a>

                    {%- comment -%} Grandchild Dropdown (Level 3) {%- endcomment -%}
                    {% if child_link.links.size > 0 %}
                      <ul class="dropdown dropdown--grandchild" data-dropdown-menu>
                        {% for grandchild_link in child_link.links %}
                          <li class="dropdown__item">
                            <a href="{{ grandchild_link.url }}" class="dropdown__link">
                              {{ grandchild_link.title }}
                            </a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Search Bar (Desktop) -->
    {% if search_enabled %}
      <div class="header__search">
        <form
          action="{{ routes.search_url }}"
          method="get"
          role="search"
          class="header__search-form"
          autocomplete="off"
        >
          <button
            type="submit"
            class="header__search-button"
            aria-label="search.header.submit_aria_label"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              aria-hidden="true"
              focusable="false"
            >
              <path d="M21.7959 20.2041L17.3437 15.75C18.6787 14.0104 19.3019 11.8282 19.087 9.64607C18.8722 7.4639 17.8353 5.44516 16.1867 3.99937C14.5382 2.55357 12.4014 1.78899 10.2098 1.86071C8.01829 1.93244 5.93607 2.8351 4.38558 4.38559C2.83509 5.93608 1.93243 8.0183 1.8607 10.2098C1.78898 12.4014 2.55356 14.5382 3.99936 16.1867C5.44515 17.8353 7.46389 18.8722 9.64606 19.087C11.8282 19.3019 14.0104 18.6787 15.75 17.3438L20.2059 21.8006C20.3106 21.9053 20.4348 21.9883 20.5715 22.0449C20.7083 22.1016 20.8548 22.1307 21.0028 22.1307C21.1508 22.1307 21.2973 22.1016 21.4341 22.0449C21.5708 21.9883 21.695 21.9053 21.7997 21.8006C21.9043 21.696 21.9873 21.5717 22.044 21.435C22.1006 21.2983 22.1298 21.1517 22.1298 21.0037C22.1298 20.8558 22.1006 20.7092 22.044 20.5725C21.9873 20.4358 21.9043 20.3115 21.7997 20.2069L21.7959 20.2041ZM4.12499 10.5C4.12499 9.23915 4.49888 8.0066 5.19938 6.95824C5.89987 5.90988 6.89551 5.09278 8.06039 4.61027C9.22527 4.12776 10.5071 4.00151 11.7437 4.2475C12.9803 4.49348 14.1162 5.10064 15.0078 5.9922C15.8994 6.88376 16.5065 8.01967 16.7525 9.2563C16.9985 10.4929 16.8722 11.7747 16.3897 12.9396C15.9072 14.1045 15.0901 15.1001 14.0418 15.8006C12.9934 16.5011 11.7608 16.875 10.5 16.875C8.80977 16.8733 7.18927 16.2011 5.99411 15.0059C4.79894 13.8107 4.12673 12.1902 4.12499 10.5Z"
                    fill="black" fill-opacity="0.4" />
            </svg>
          </button>

          <input
            type="search"
            name="q"
            class="header__search-input"
            placeholder="{{ section.settings.search_placeholder | default: 'Search for products...' }}"
            aria-label="search.header.input_aria_label"
            autocomplete="off"
            role="combobox"
            aria-expanded="false"
            aria-owns="predictive-search-results"
            aria-controls="predictive-search-results"
            aria-haspopup="listbox"
            aria-autocomplete="list"
          >

          <div
            class="header__search-suggestions"
            role="listbox"
            aria-label="search.header.suggestions_label"
            hidden
          ></div>
        </form>
      </div>
    {% endif %}

    <!-- Icons -->
    <div class="header__icons">
      <!-- Mobile Search Toggle -->
      {% if search_enabled %}
        <button
          class="header__icon header__icon--search-mobile"
          aria-label="Toggle search"
          data-search-toggle
        >
          {{ 'icon-search.svg' | inline_asset_content }}
        </button>
      {% endif %}

      <!-- Cart -->
      <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart">
        {{ 'icon-cart.svg' | inline_asset_content }}
        {% if cart.item_count > 0 %}
          <span class="header__cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>

      <!-- Account -->
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon header__icon--account">
          {{ 'icon-profile.svg' | inline_asset_content }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Mobile Search (Hidden by default) -->
  {% if search_enabled %}
    <div class="header__search-mobile" data-search-mobile>
      <form
        action="{{ routes.search_url }}"
        method="get"
        role="search"
        class="header__search-form"
        autocomplete="off"
      >
        <button type="submit" class="header__search-button" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M21.7959 20.2041L17.3437 15.75C18.6787 14.0104 19.3019 11.8282 19.087 9.64607C18.8722 7.4639 17.8353 5.44516 16.1867 3.99937C14.5382 2.55357 12.4014 1.78899 10.2098 1.86071C8.01829 1.93244 5.93607 2.8351 4.38558 4.38559C2.83509 5.93608 1.93243 8.0183 1.8607 10.2098C1.78898 12.4014 2.55356 14.5382 3.99936 16.1867C5.44515 17.8353 7.46389 18.8722 9.64606 19.087C11.8282 19.3019 14.0104 18.6787 15.75 17.3438L20.2059 21.8006C20.3106 21.9053 20.4348 21.9883 20.5715 22.0449C20.7083 22.1016 20.8548 22.1307 21.0028 22.1307C21.1508 22.1307 21.2973 22.1016 21.4341 22.0449C21.5708 21.9883 21.695 21.9053 21.7997 21.8006C21.9043 21.696 21.9873 21.5717 22.044 21.435C22.1006 21.2983 22.1298 21.1517 22.1298 21.0037C22.1298 20.8558 22.1006 20.7092 22.044 20.5725C21.9873 20.4358 21.9043 20.3115 21.7997 20.2069L21.7959 20.2041ZM4.12499 10.5C4.12499 9.23915 4.49888 8.0066 5.19938 6.95824C5.89987 5.90988 6.89551 5.09278 8.06039 4.61027C9.22527 4.12776 10.5071 4.00151 11.7437 4.2475C12.9803 4.49348 14.1162 5.10064 15.0078 5.9922C15.8994 6.88376 16.5065 8.01967 16.7525 9.2563C16.9985 10.4929 16.8722 11.7747 16.3897 12.9396C15.9072 14.1045 15.0901 15.1001 14.0418 15.8006C12.9934 16.5011 11.7608 16.875 10.5 16.875C8.80977 16.8733 7.18927 16.2011 5.99411 15.0059C4.79894 13.8107 4.12673 12.1902 4.12499 10.5Z" fill="black" fill-opacity="0.4"/>
        </svg>
      </button>
      <input
        type="search"
        name="q"
        class="header__search-input"
        placeholder="{{ section.settings.search_placeholder | default: 'Search for products...' }}"
        aria-label="search.header.input_aria_label"
        autocomplete="off"
      >
      
      <div
        class="header__search-suggestions"
        role="listbox"
        aria-label="search.header.suggestions_label"
        hidden
        ></div>
      </form>
    </div>
  {% endif %}
</header>

<!-- Mobile Menu Overlay -->
<div class="header__overlay" data-menu-overlay></div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_size",
      "label": "Logo width (px)",
      "min": 80,
      "max": 240,
      "step": 10,
      "default": 140,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder text",
      "default": "Search for products..."
    }
  ]
}
{% endschema %}
