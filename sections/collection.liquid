{{ 'collection.css' | asset_url | stylesheet_tag: preload: true }}

<section class="col-hero">
  <div class="col-hero__bg">
    {% if collection.image %}
      <img src="{{ collection.image | img_url: '2000x' }}" alt="{{ collection.title }}" class="col-hero__img" width="1600" height="auto" />
    {% endif %}
    <div class="col-hero__overlay"></div>
  </div>
  <div class="col-hero__content">
    <p class="col-hero__eyebrow">Collection</p>
    <h1 class="col-hero__title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="col-hero__desc">{{ collection.description }}</p>
    {% endif %}
    <p class="col-hero__count">{{ collection.products_count }} pieces</p>
  </div>
</section>

<!-- ╔══════════════════════════════════════════════╗ -->
<!-- ║         FILTER + SORT TOOLBAR               ║ -->
<!-- ╚══════════════════════════════════════════════╝ -->
<div class="toolbar">
  <div class="toolbar__inner">
    <button class="toolbar__filter-toggle" id="filterToggle" aria-expanded="false" aria-controls="filterPanel">
      <svg width="18" height="12" viewBox="0 0 18 12" fill="none"><path d="M0 1h18M3 6h12M6 11h6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
      Filters
    </button>
    <div class="toolbar__sort">
      <label for="sortBy" class="toolbar__sort-label">Sort by</label>
      <select id="sortBy" class="toolbar__select" onchange="window.location = this.value">
        <option value="?sort_by=manual" {% if collection.sort_by == 'manual' %}selected{% endif %}>Featured</option>
        <option value="?sort_by=best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best Selling</option>
        <option value="?sort_by=price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price: Low → High</option>
        <option value="?sort_by=price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price: High → Low</option>
        <option value="?sort_by=created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Newest</option>
        <option value="?sort_by=title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>A - Z</option>
      </select>
    </div>
  </div>
</div>

<!-- ╔══════════════════════════════════════════════╗ -->
<!-- ║       MAIN LAYOUT: SIDEBAR + GRID           ║ -->
<!-- ╚══════════════════════════════════════════════╝ -->
<div class="col-layout">

  <!-- FILTER SIDEBAR -->
  <aside class="filter-panel" id="filterPanel" aria-hidden="true">
    <div class="filter-panel__inner">
      <div class="filter-panel__head">
        <h2 class="filter-panel__title">Filter</h2>
        <button class="filter-panel__close" id="filterClose" aria-label="Close filters">✕</button>
      </div>

      <form>
  {%- for filter in collection.filters -%}
    {% comment %} <details>
      <summary>
        <div> 
          <span>{{ filter.label }} </span>

          {%- if filter.active_values.size > 0 -%}
            <span>({{ filter.active_values.size }})</span>
          {%- endif -%}
        </div>
      </summary>

      <div>
        <div>
          <p>{{ filter.active_values.size }} selected</p>
          {%- if filter.active_values.size > 0 -%}
            <p><a href="{{ filter.url_to_remove }}">Reset</a></p>
          {%- endif -%}
        </div>

        {%- case filter.type -%}
          {%- when 'boolean' -%}
            <ul>
              <li>
                <label for="Filter-{{ filter.param_name }}-{{ filter.true_value.value }}">
                  <input
                    type="checkbox"
                    name="{{ filter.param_name }}"
                    value="{{ filter.true_value.value }}"
                    id="Filter-{{ filter.param_name }}"
                    {% if filter.true_value.active %}checked{% endif %}
                    {% if filter.true_value.count == 0 and filter.true_value.active == false %}disabled{% endif %}
                  >
                  {{ filter.true_value.label }}
                </label>
              </li>
            </ul>

        

        {%- endcase -%}
      </div>
    </details> {% endcomment %}
    <div class="collection-filter">
      <div class="collection-filter-label">{{ filter.label }}</div>
      <div class="collection-filter-options">
        {% if filter.type == "list" or filter.type == "boolean" %}
          {% for value in filter.values %}
            {{value.param_name}}={{ value.label }}
          {% endfor %}
          {% else %}
            {{ filter.values }}
        {% endif %}
      </div>
    </div>
  {%- endfor -%}
</form>

      {% comment %} <!-- Availability -->
      <div class="filter-group">
        <button class="filter-group__toggle" aria-expanded="true">
          Availability
          <svg class="chevron" width="12" height="7" viewBox="0 0 12 7"><path d="M1 1l5 5 5-5" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
        </button>
        <div class="filter-group__body">
          <label class="filter-check">
            <input type="checkbox" name="availability" value="in-stock" />
            <span class="filter-check__box"></span>
            <span>In Stock</span>
          </label>
          <label class="filter-check">
            <input type="checkbox" name="availability" value="out-of-stock" />
            <span class="filter-check__box"></span>
            <span>Out of Stock</span>
          </label>
        </div>
      </div>

      <!-- Price Range -->
      <div class="filter-group">
        <button class="filter-group__toggle" aria-expanded="true">
          Price Range
          <svg class="chevron" width="12" height="7" viewBox="0 0 12 7"><path d="M1 1l5 5 5-5" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
        </button>
        <div class="filter-group__body">
          <div class="price-range">
            <div class="price-range__inputs">
              <div class="price-range__field">
                <span>$</span>
                <input type="number" id="priceMin" placeholder="0" min="0" />
              </div>
              <span class="price-range__sep">—</span>
              <div class="price-range__field">
                <span>$</span>
                <input type="number" id="priceMax" placeholder="9999" min="0" />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Product Type -->
      {% unless collection.all_types == blank %}
      <div class="filter-group">
        <button class="filter-group__toggle" aria-expanded="true">
          Type
          <svg class="chevron" width="12" height="7" viewBox="0 0 12 7"><path d="M1 1l5 5 5-5" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
        </button>
        <div class="filter-group__body">
          {% for type in collection.all_types %}
            <label class="filter-check">
              <input type="checkbox" name="type" value="{{ type | handleize }}" />
              <span class="filter-check__box"></span>
              <span>{{ type }}</span>
            </label>
          {% endfor %}
        </div>
      </div>
      {% endunless %}

      <!-- Tags / Colors -->
      {% unless collection.all_tags == blank %}
      <div class="filter-group">
        <button class="filter-group__toggle" aria-expanded="true">
          Tags
          <svg class="chevron" width="12" height="7" viewBox="0 0 12 7"><path d="M1 1l5 5 5-5" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
        </button>
        <div class="filter-group__body filter-tags">
          {% for tag in collection.all_tags %}
            <a href="{{ collection.url }}/{{ tag | handleize }}"
               class="filter-tag {% if current_tags contains tag %}filter-tag--active{% endif %}">
              {{ tag }}
            </a>
          {% endfor %}
        </div>
      </div>
      {% endunless %} {% endcomment %}

      <button class="btn-apply">Apply Filters</button>
      <a href="{{ collection.url }}" class="btn-clear">Clear All</a>
    </div>
  </aside> 


  <!-- PRODUCT GRID -->
  <main class="col-grid-wrap">
    {% paginate collection.products by 12 %}

      {% if collection.products.size == 0 %}
        <div class="col-empty">
          <p>No products found in this collection.</p>
          <a href="{{ collection.url }}">Clear filters</a>
        </div>
      {% else %}
        <div class="col-grid" id="productGrid">
          {% for product in collection.products %}
            {%- render 'product-cart', product: product -%}
          {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="col-pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}

    {% endpaginate %}
  </main>
</div>

<!-- Overlay -->
<div class="filter-overlay" id="filterOverlay"></div>

<script src="{{ 'collection.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:general.collection",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_filter",
      "label": "Show filter panel",
      "default": true
    }
  ]
}
{% endschema %}
